
Задание 1
SELECT Passenger.id, Passenger.name AS PASSENGER_NAME, Trip.plane, Company.name AS COMPANY_NAME
FROM Passenger, Trip, Company
Where plane = 'Boeing' AND Company.name = 'air_France'
GROUP BY Passenger.id;


Задание 2
SELECT Pass_in_trip.id, Pass_in_trip.trip
FROM Pass_in_trip
ORDER BY Pass_in_trip.trip DESC;


Задание 3
SELECT SUBSTR (name, 1, 1) AS FIRST_CHAR, COUNT (*)
FROM Passenger
GROUP BY SUBSTR (name, 1, 1)
HAVING COUNT (*) > 1
ORDER BY 2 DESC;
